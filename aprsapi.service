[Unit]
Description=APRS API Service (Gunicorn)
After=network.target

[Service]
Type=notify
NotifyAccess=main
User=www-data
Group=www-data
WorkingDirectory=/opt/aprsbot
Environment="PATH=/opt/aprsbot/venv/bin"
ExecStart=/opt/aprsbot/venv/bin/gunicorn -w 4 -b 0.0.0.0:5000 api:app

Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
